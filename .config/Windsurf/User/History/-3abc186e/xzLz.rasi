configuration {
    show-icons: true;
    font: "SF Pro Display 14, Inter, sans-serif";
    drun-display-format: "{icon} {name}";
    line-margin: 12;
}

* {
    background-color: #16171fFF;
    foreground:      #e0e0e0;
    selected:        #4a6fff;
    accent:          #6c7d9c;
    border-radius:   14px;
    margin:          0px;
}

window {
    width:           420px;
    border:          0;

    border-radius:   12px;
    padding:         24px 20px 18px 20px;
    background-color: #16171fFF;
}

mainbox {
    spacing: 16px;
}

inputbar {
    children: [prompt, entry];
    spacing: 16px;
}

prompt {
    text-color: @selected;
    font: "SF Pro Display Bold 16";
    vertical-align: 0.5;
}

entry {
    text-color: @foreground;
    background-color: #22232eFF;
    padding: 12px 16px;
    border-radius: 12px;
    border: 0;
    font: "SF Pro Display 15";
}

listview {
    lines: 8;
    fixed-height: false;
    border: 0;
    spacing: 6px;
    padding: 0;
}

element {
    border: 0;
    border-radius: 12px;
    padding: 14px 18px;
    background-color: #22232eFF;
    text-color: @foreground;
    margin: 4px 0 0 0;
}

element.normal.normal {
    #background-color: #22232eFF;
}

element.selected.normal {
    background-color: #4a6fff;
    text-color: #ffffff;
    border: 0;
}

element-icon {
    size: 28px;
}

element-text {
    vertical-align: 0.5;
    text-color: inherit;
}

message {
    padding: 8px 0 0 0;
}

scrollbar {
    handle-color: @selected;
    handle-width: 6px;
}
